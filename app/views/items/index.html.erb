<h1>All Items</h1>

<section class="statistics" id="statistics-most-popular">
  <h2>Most Popular Items</h2>
   <ol>
     <% @most_popular_items.each do |item| %>
      <li><%= link_to item.name, item_path(item) %>, Total quantity fulfilled: <%= item.total_quantity %></li>
     <% end %>
   </ol>
</section>

<section class="statistics" id="statistics-least-popular">
  <h2>Least Popular Items</h2>
  <ol>
    <% @least_popular_items.each do |item| %>
      <li><%= link_to item.name, item_path(item) %>, Total quantity fulfilled: <%= item.total_quantity %></li>
    <% end %>
  </ol>
</section>

<% @items.each do |item| %>
  <section id="item-id-<%= item.id %>" class="card mb-3">
    <div class="row no-gutters">
      <%= tag :img, src: item.image || @default_image, alt: "image of #{item.name}", class: "col-md-3 card-img" %>
      <div class="col-md-9">
        <div class="card-body">
          <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
          <p class="card-text"><%= number_to_currency(item.price) %></p>
          <p class="card-text">Description: <%= item.description %></p>
          <p class="card-text"><%= item.inventory %> in stock</p>
        </div>
      </div>
    </div>
  </section>
<% end %>
